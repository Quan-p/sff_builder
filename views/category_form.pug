extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Category:
      input#category.form-control(type='text' placeholder='Category' name='title' required='true' value=(undefined===category ? '' : category.title) )
    div.form-group
      label(for='description') Description:
      textarea(name="description", id='description', cols="30", rows="10", maxlength: 500)
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
