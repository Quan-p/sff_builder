extends layout

block content
  h1.form-title=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#category.form-input(type='text' placeholder='Category Title' name='title' maxlength=30 required='true' value=(undefined===category ? '' : category.title) )
    div.form-group
      label(for='description') Description:
      textarea(name="description", id='description', cols="30", rows="10", maxlength: 500) #{undefined===category ? '' : category.description}
      button.btn.form-change(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
