extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
        label(for='name') Name:
        input#component.form-control(type='text' name='name' required='true' value=(undefined===component ? '' : component.name) )
    div.form-group
        label(for='category') Category:
        select(type='select' name='category' required='true')
            each category in categories
                option(value=category.id) #{category.title}

    div.form-group
        label(for='features') Features:
        textarea(name="features", id='description', cols="30", rows="10", maxlength: 500)
        button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
